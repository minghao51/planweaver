# PlanWeaver Environment Configuration
# Copy this file to .env and fill in your API keys

# Google Gemini (recommended - default)
GOOGLE_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# OpenRouter (for DeepSeek and other models)
OPENROUTER_API_KEY=

# Ollama (local models)
OLLAMA_BASE_URL=http://localhost:11434

# Default Models (Gemini 3 series - latest)
DEFAULT_PLANNER_MODEL=gemini-2.5-flash
DEFAULT_EXECUTOR_MODEL=gemini-3-flash

# Database
DATABASE_URL=sqlite:///./planweaver.db

# GitHub Configuration (optional)
# Get personal access token from: https://github.com/settings/tokens
# Required for private repositories or higher rate limits
GITHUB_TOKEN=

# Web Search Configuration (optional)
# Get Tavily API key from: https://tavily.com
# Alternative providers: serper, duckduckgo
TAVILY_API_KEY=
SEARCH_PROVIDER=tavily

# File Upload Configuration
MAX_FILE_SIZE_MB=10
